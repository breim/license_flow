<h1>Users</h1>
<p>A list of all users in your system including their name and e-mail.</p>
<div>
  <%= link_to 'Create new user', new_admin_user_path %>
</div>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Account</th>
      <th>
        <span>Actions</span>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.account.name %></td>
        <td>
          <%= link_to 'Show', admin_user_path(user) %>
          <%= link_to 'Edit', edit_admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
