<h1>Products</h1>
<p>A list of all products in your system including their name and description.</p>

<%= link_to 'Create new product', new_admin_product_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td>
          <%= link_to 'Show', admin_product_path(product) %>
          <%= link_to 'Edit', edit_admin_product_path(product) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
